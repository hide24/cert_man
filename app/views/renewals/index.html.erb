<p id="notice"><%= notice %></p>

<h1>Renewals</h1>

<table>
  <thead>
    <tr>
      <th>Host</th>
      <th>File host</th>
      <th>File path</th>
      <th>Cer filename</th>
      <th>Key filename</th>
      <th>File username</th>
      <th>File password</th>
      <th>File pkey</th>
      <th>File use password</th>
      <th>Script host</th>
      <th>Script path</th>
      <th>Script username</th>
      <th>Script password</th>
      <th>Script pkey</th>
      <th>Script use password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @renewals.each do |renewal| %>
      <tr>
        <td><%= renewal.host_id %></td>
        <td><%= renewal.file_host %></td>
        <td><%= renewal.file_path %></td>
        <td><%= renewal.cer_filename %></td>
        <td><%= renewal.key_filename %></td>
        <td><%= renewal.file_username %></td>
        <td><%= renewal.file_password %></td>
        <td><%= renewal.file_pkey %></td>
        <td><%= renewal.file_use_password %></td>
        <td><%= renewal.script_host %></td>
        <td><%= renewal.script_path %></td>
        <td><%= renewal.script_username %></td>
        <td><%= renewal.script_password %></td>
        <td><%= renewal.script_pkey %></td>
        <td><%= renewal.script_use_password %></td>
        <td><%= link_to 'Show', renewal %></td>
        <td><%= link_to 'Edit', edit_renewal_path(renewal) %></td>
        <td><%= link_to 'Destroy', renewal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Renewal', new_host_renewal_path(@host) %>
