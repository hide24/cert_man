<p id="notice"><%= notice %></p>

<h1>Certificates</h1>

<table>
  <thead>
    <tr>
      <th>Version</th>
      <th>Key</th>
      <th>Certificate request</th>
      <th>Certificate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificates.each do |certificate| %>
      <tr>
        <td><%= certificate.version %></td>
        <td><%= certificate.certificate_key %></td>
        <td><%= certificate.certificate_request %></td>
        <td><%= certificate.certificate %></td>
        <td><%= link_to 'Show', certificate %></td>
        <td><%= link_to 'Edit', edit_certificate_path(certificate) %></td>
        <td><%= link_to 'Destroy', certificate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Certificate', new_host_certificate_path(@host) %>
